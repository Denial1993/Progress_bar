<!--      第三排商品 -->
<div class="row">
  <% @products_3.each do |product|%>
    <div class="col-xs-3">
      <div class="thumbnail">
        <%= link_to product_path(product) do  %>
          <%= image_tag (product.image_url || "https://via.placeholder.com/480x300?text=360x200") %>
        <% end %>
        <div class="caption">
          <%= link_to product_path(product) do  %>
            <h3><%=product[:name]%></h3>
          <% end %>
          <p><%=product[:description]%></p>
          <p>
            類別: <%= product.subcategory.try(:name_with_category) %><br/>
            序號:   <%= product.id %>
          </p>
          <% if current_user %>
            <%= link_to("編輯",edit_product_path(product),class: "btn btn-danger") %>
            <%= link_to("刪除",product_path(product),method: "delete", class: "btn btn-danger",data: {confirm: "Are you sure to delete?"} )  %>
          <% end %>
        </div>
      </div>
    </div>
  <%end%>
</div>